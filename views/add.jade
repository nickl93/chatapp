extends layout

block content
    h1 Create a new chat room:
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(type=text, placeholder="Enter a room name", name="name" id="name")
            small.text-muted Give your chat room a meaningful name for people to refer to it.
        button.btn.btn-success(type="submit") Create Room!